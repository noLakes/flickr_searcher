<h1>Flickr Searcher</h1>

<%= form_for :image, method: :get, local: true do |f| %>
  <%= f.label "User Id:" %>
  <%= f.text_field :user_id %>
  </br></br>
  <%= f.submit :search, name: nil %>
<% end %>

<% if @photos %>
  <h2>Results</h2>
  <% @photos.each do |pic| %>
    <img src="<%= Flickr.url(pic) %>">
    </br></br>
  <% end %>
<% end %>

